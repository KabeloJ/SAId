@model Core.AccountDetails.Models.AccountDetailsModel
@{

}

<div class="p-2">
    <div>
        <h4>Personal Details</h4>
        <hr />
        <div class="col-md-7">
            <form method="post" asp-action="Submit">
                <div class="form-group">
                    <label>Firstnames</label>
                    <br />
                    <span class="text-danger" asp-validation-for="FirstNames"></span>
                    <input type="text" class="form-control" asp-for="FirstNames" />
                </div>
                <div class="form-group">
                    <label>Surname</label>
                    <br />
                    <span class="text-danger" asp-validation-for="Surname"></span>
                    <input type="text" class="form-control" asp-for="Surname" />
                </div>
                <div class="form-group">
                    <label>Maiden Name</label>
                    <br />
                    <span class="text-danger" asp-validation-for="MaidenName"></span>
                    <input type="text" class="form-control" asp-for="MaidenName" />
                </div>
                <div class="form-group">
                    <label>Initials</label>
                    <br />
                    <span class="text-danger" asp-validation-for="Initials"></span>
                    <input type="text" class="form-control" asp-for="Initials" />
                </div>
                <div class="form-group">
                    <label>Nationality</label>
                    <br />
                    <span class="text-danger" asp-validation-for="Nationality"></span>
                    <select asp-for="Nationality" class="form-control">
                        <option>--Select Nationality--</option>
                        @foreach (var n in Model.Nationalities)
                        {
                            <option value="@n">@n</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Country of Birth</label>
                    <br />
                    <span class="text-danger" asp-validation-for="CountryOfBirth"></span>
                    <select asp-for="CountryOfBirth" class="form-control">
                        <option>--Select Country--</option>
                        @foreach (var n in Model.Nationalities)
                        {
                            <option value="@n">@n</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Date of Birth</label>
                    <br />
                    <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                    <input type="date" class="form-control" asp-for="DateOfBirth" />
                </div>
                <div class="form-group">
                    <label>Gender</label>
                    <br />
                    <span class="text-danger" asp-validation-for="Gender"></span>
                    <select class="form-control" asp-for="Gender">
                        <option>--Select Gender--</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Marital Status</label>
                    <br />
                    <span class="text-danger" asp-validation-for="MaritalStatus"></span>
                    <select class="form-control" asp-for="MaritalStatus">
                        <option>--Select Marital Status--</option>
                        <option value="Single">Single</option>
                        <option value="Married">Married</option>
                        <option value="Divorced">Divorced</option>
                        <option value="Widowered">Widowered</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Places of Birth</label>
                    <br />
                    <span class="text-danger" asp-validation-for="PlaceOfBirth"></span>
                    <input type="text" class="form-control" asp-for="PlaceOfBirth" />
                </div>
                <div class="form-group">
                    <label>Cell Number</label>
                    <br />
                    <span class="text-danger" asp-validation-for="CellNo"></span>
                    <input type="number" class="form-control" asp-for="CellNo" />
                </div>
                <div class="form-group">
                    <label>Home Tel</label>
                    <br />
                    <input type="number" class="form-control" asp-for="HomeTelNo" placeholder="Optional" />
                </div>
                <div class="form-group">
                    <label>Work Tel</label>
                    <br />
                    <input type="number" class="form-control" asp-for="WorkTelNo" placeholder="Optional" />
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <br />
                    <input type="email" class="form-control" asp-for="EmailAddress" />
                </div>
                <br />
                <h5>Physical Address</h5>

                <div class="form-group">
                    <label>Unit Number</label>
                    <input type="text" class="form-control" asp-for="PhysicalUnitNumber" placeholder="Optional" />
                </div>
                <div class="form-group">
                    <label>Complex</label>
                    <input type="text" class="form-control" asp-for="PhysicalComplex" placeholder="Optional" />
                </div>
                <div class="form-group">
                    <label>Street Number</label>
                    <input type="text" class="form-control" asp-for="PhysicalStreetNumber" placeholder="Optional" />
                </div>
                <div class="form-group">
                    <label>Street Name</label>
                    <input type="text" class="form-control" asp-for="PhysicalStreetName" placeholder="Optional" />
                </div>
                <div class="form-group">
                    <label>Suburb</label>
                    <input type="text" class="form-control" asp-for="PhysicalSuburb" placeholder="Optional" />
                </div>
                <div class="form-group">
                    <label>City</label>
                    <input type="text" class="form-control" asp-for="PhysicalCity" placeholder="Optional" />
                </div>
                <div class="form-group">
                    <label>Postal Code</label>
                    <input type="number" class="form-control" asp-for="PhysicalPostalCode" placeholder="Optional" />
                </div>
                <br />
                <h5>Postal Address</h5>
                <br />
                <div class="form-check">
                    <input type="checkbox" asp-for="isPostalAddressSameAsPhysical" /><label asp-for="isPostalAddressSameAsPhysical">Postal address is the same as physical address</label>
                </div>
                @if (!Model.isPostalAddressSameAsPhysical)
                {
                    <div class="form-group">
                        <label>Unit Number</label>
                        <input type="text" class="form-control" asp-for="PostalUnitNumber" placeholder="Optional" />
                    </div>
                    <div class="form-group">
                        <label>Complex</label>
                        <input type="text" class="form-control" asp-for="PostalComplex" placeholder="Optional" />
                    </div>
                    <div class="form-group">
                        <label>Street Name</label>
                        <input type="text" class="form-control" asp-for="PostalStreetNumber" placeholder="Optional" />
                    </div>
                    <div class="form-group">
                        <label>City</label>
                        <input type="text" class="form-control" asp-for="PostalCity" placeholder="Optional" />
                    </div>
                    <div class="form-group">
                        <label>Postal Code</label>
                        <input type="number" class="form-control" asp-for="PostalPostalCode" placeholder="Optional" />
                    </div>
                    <div class="form-group">
                        <label>Country Code</label>
                        <input type="text" class="form-control" asp-for="PostalCountryCode" placeholder="Optional" />
                    </div>
                }

                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-control">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}